{
  "$schema": "https://www.schemastore.org/package",
  "name": "@vuebro/configs",
  "version": "1.2.37",
  "description": "A comprehensive collection of shared configuration files for Vue.js projects with TypeScript, ESLint, Prettier, UnoCSS, and Vite, featuring Pug support",
  "keywords": [
    "vue",
    "vuejs",
    "typescript",
    "eslint",
    "prettier",
    "unocss",
    "vite",
    "pug",
    "config",
    "configuration",
    "frontend",
    "javascript",
    "web-development",
    "tooling"
  ],
  "homepage": "https://github.com/vuebro/configs#readme",
  "bugs": {
    "url": "https://github.com/vuebro/configs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuebro/configs.git"
  },
  "license": "AGPL-3.0-or-later",
  "author": "Jerry Bruwes <jbruwes@gmail.com> (https://jbruwes.github.io)",
  "type": "module",
  "exports": {
    "./eslint": {
      "types": "./dist/eslint.config.d.ts",
      "import": "./dist/eslint.config.js"
    },
    "./prettierrc": {
      "types": "./dist/prettierrc.config.d.ts",
      "import": "./dist/prettierrc.config.js"
    },
    "./tsconfig": "./tsconfig.json",
    "./uno": {
      "types": "./dist/uno.config.d.ts",
      "import": "./dist/uno.config.js"
    },
    "./uno/presets": {
      "types": "./dist/uno.presets.d.ts",
      "import": "./dist/uno.presets.js"
    },
    "./vite": {
      "types": "./dist/vite.config.d.ts",
      "import": "./dist/vite.config.js"
    }
  },
  "files": [
    "dist",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint ."
  },
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@prettier/plugin-pug": "^3.4.2",
    "@tsconfig/strictest": "^2.0.8",
    "@unocss/eslint-config": "^66.5.12",
    "@unocss/extractor-arbitrary-variants": "^66.5.12",
    "@unocss/extractor-pug": "^66.5.12",
    "@unocss/preset-attributify": "^66.5.12",
    "@unocss/preset-icons": "^66.5.12",
    "@unocss/preset-tagify": "^66.5.12",
    "@unocss/preset-typography": "^66.5.12",
    "@unocss/preset-web-fonts": "^66.5.12",
    "@unocss/preset-wind4": "^66.5.12",
    "@unocss/vite": "^66.5.12",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue-macros/reactivity-transform": "^3.1.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/language-plugin-pug": "^3.2.1",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-de-morgan": "^2.0.0",
    "eslint-plugin-depend": "^1.4.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-package-json": "^0.87.1",
    "eslint-plugin-perfectionist": "^5.2.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.6.2",
    "eslint-plugin-vue-pug": "^1.0.0-alpha.4",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "prettier-plugin-jsdoc": "^1.8.0",
    "prettier-plugin-packagejson": "^2.5.20",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "pug": "^3.0.3",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "unocss": "^66.5.12",
    "vite": "^7.3.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vite-tsconfig-paths": "^6.0.3",
    "vue-eslint-parser-template-tokenizer-pug": "^1.0.0",
    "vue-tsc": "^3.2.1"
  },
  "devDependencies": {
    "@eslint/config-helpers": "^0.5.0",
    "@types/node": "^25.0.3"
  }
}
